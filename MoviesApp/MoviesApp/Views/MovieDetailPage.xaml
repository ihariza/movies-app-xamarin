<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoviesApp.Views.MovieDetailPage"
             xmlns:viewmodels="clr-namespace:MoviesApp.ViewModels"
             x:DataType="viewmodels:MovieDetailViewModel">

    <ContentPage.Content>
        <StackLayout Padding="0">
            <Image HorizontalOptions="Fill" HeightRequest="300" Aspect="AspectFill">
                <Image.Source>
                    <UriImageSource Uri="{Binding Movie.BackdropPath}" CacheValidity="1" CachingEnabled="true"/>
                </Image.Source>
            </Image>
            <Label Text="{Binding Movie.Title}" FontSize="14" FontAttributes="Bold" Padding="16"/>
            <Label Text="{Binding Movie.Overview}" Padding="16, 0, 16, 16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>